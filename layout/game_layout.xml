<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/box_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/common_box_button" />

        <Button
            android:id="@+id/box_two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/rare_box_button" />

        <Button
            android:id="@+id/box_three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/epic_box_button" />

        <Button
            android:id="@+id/box_four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/legendary_box_button" />

    </LinearLayout>

    <Button
        android:id="@+id/main_box_button"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:text="@string/main_box_button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/possessions_button"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="425dp" />

</android.support.constraint.ConstraintLayout>